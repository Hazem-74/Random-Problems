# In[16]:


def extract_quadratic_matrix(expr, vars_):
    expr = expand(expr)
    n = len(vars_)
    M = Matrix.zeros(n, n)
    for i in range(n):
        for j in range(n):
            coeff = Poly(expr, *vars_).coeff_monomial(vars_[i]*vars_[j])
            if i == j:
                M[i, j] = coeff
            else:
                M[i, j] = M[j, i] = coeff / 2
    return M


