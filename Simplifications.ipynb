# In[78]:


def levi_civita_tensor():
    epsilon = [[[0 for _ in range(3)] for _ in range(3)] for _ in range(3)]

    epsilon[0][1][2] = 1
    epsilon[1][2][0] = 1
    epsilon[2][0][1] = 1

    epsilon[0][2][1] = -1
    epsilon[2][1][0] = -1
    epsilon[1][0][2] = -1
    return sp.MutableDenseNDimArray(epsilon)

epsilon_tensor = levi_civita_tensor()
print("Levi-Civita:")
epsilon_tensor


