a_a0 = 2 * a0
V0_eV_a = 20

even_energies_a, odd_energies_a = find_energy_levels_dimless(V0_eV_a, a_a0)
plot_wavefunctions(a_a0, V0_eV_a, even_energies_a, odd_energies_a)
display_unique_energies(even_energies_a, odd_energies_a, eV_to_J)


